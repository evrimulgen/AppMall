<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppStore.Theme" parent="Theme.Sherlock">
        <!-- action bar height -->
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
	    <item name="android:actionBarStyle">@style/AppStore.ActionBar.Style</item>
        
        <item name="android:actionBarTabTextStyle">@style/AppStore.ActionBarTabText.Style</item>
        
        <!-- home up indicator -->
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
	</style>
	
    <style name="AppStore.ActionBarTabText.Style" parent="@style/Widget.Sherlock.ActionBar.TabText">
	    <!-- <item name="android:textColor">@color/black</item> -->
	    <item name="android:textSize">@dimen/action_bar_tab_text_size</item>
	</style>
    
    <style name="AppStore.ActionBar.Style" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppStore.ActionBarText.Style</item>
    </style>
    
    <style name="AppStore.ActionBarText.Style" parent="@android:style/TextAppearance">
        <!-- <item name="android:textColor">@color/red</item> -->
        <item name="android:textSize">@dimen/action_bar_tab_text_appearance_size</item>
			
    </style>
</resources>