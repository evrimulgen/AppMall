<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/left_nav_item_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_category_item_selected"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="8.0px"
        android:paddingRight="13.0px" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60.0px"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.0px"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/left_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/left_nav_text"
                android:singleLine="true"
                android:textSize="25.0px" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffc0c6d3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/jiantou"
        android:visibility="gone" />

</RelativeLayout>