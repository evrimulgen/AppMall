<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
  
  	<groupId>com.allinpay.ipos.appstore</groupId>
  	<artifactId>allinpay-android-appstore</artifactId>
  	<version>1.2-SNAPSHOT</version>
  	<name>${project.artifactId}</name>
	<packaging>apk</packaging>
  
	<organization>
		<name>All-In-Pay</name>
		<url>http://www.allinpay.com/</url>
	</organization>
	
	<developers>
	    <developer>
	        <id>Teddy</id>
	        <name>Teddy</name>
	        <email>ljm@allinpay.com</email>
	        <url>http://www.allinpay.com/</url>
	        <organization>All-In-Pay</organization>
	        <organizationUrl>http://www.allinpay.com/</organizationUrl>
	        <roles>
	            <role>developer</role>
	        </roles>
	        <timezone>UTC+08:00</timezone>
	        <properties>
	            <picUrl>http://www.allinpay.com/templates/default/images/logo.gif</picUrl>
	        </properties>
	    </developer>
	</developers>

	<properties>	
		<android-platform>14</android-platform>
		<android-maven-plugin-version>3.7.0</android-maven-plugin-version>
		<!-- Available android-maven-plugin-version 3.4.0, 3.8.0, 3.7.0, 3.6.1 -->
		<maven-compiler-plugin-version>2.5.1</maven-compiler-plugin-version>
		<java-version>1.6</java-version>
		<maven-eclipse-plugin-version>2.8</maven-eclipse-plugin-version>
		<com.google.android-version>4.0.1.2</com.google.android-version>
		<!-- Available Android versions: 
			1.5_r3, 1.5_r4, 1.6_r2, 2.1.2, 
			2.1_r1, 2.2.1, 2.3.1, 2.3.3, 4.0_r3, 4.0.3_r3, 4.0.1.2,
			 4.1_r2, 4.1.1.4, 4.2.2_r2, 4.3_r2, 4.4, 4.4_r1 -->
			 
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
					 
		<!-- timestamp -->
		<timestamp>${maven.build.timestamp}</timestamp>
   		<maven.build.timestamp.format>yyyy-MM-dd-HH_mm</maven.build.timestamp.format>
		<!-- product key -->	
